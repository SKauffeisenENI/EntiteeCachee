{% extends 'base.html.twig' %}

{% block title %}Hello JeuController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <ul>
        <li><a href="{{ url("app_ajout_mot") }}">Ajouter un mot</a></li>
    </ul>
    {{ render(url('app_ajout_mot')) }}
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Mot</th>
      <th scope="col">Enlever le mot</th>
    </tr>
  </thead>
  <tbody>
  {% set i = 0 %}
    {% for mot in listeMot %}
    {% set i = i+1 %}
    <tr>
      <th scope="row">{{ i }}</th>
      <td>{{ mot.mot }}</td>
      {# <td>{{ mot.equipe }}</td> #}
      <td><a href="{{ path('app_enlever_mot', {'id' : mot.id}) }}"><i class="fa-solid fa-trash"></i></a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
