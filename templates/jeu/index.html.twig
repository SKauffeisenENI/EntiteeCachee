{% extends 'base.html.twig' %}

{% block title %}Hello JeuController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{ render(url('app_ajout_mot')) }}
</div>
<div class="row row-cols-5 g-4">
{% for mot in listeMot %}
<div class="card text-center col">
  <div class="card-body">
    <h5 class="card-title">{{ mot.mot }}</h5>
    <form action="{{ path("app_jeu_reponse", {'id': mot.id }) }}" method="GET">
      <select class="form-select card-text" name="equipe">
        <option value="1" selected>Équipe 1</option>
        <option value="2">Équipe 2</option>
        <option value="3">Équipe 3</option>
        <option value="4">Équipe 4</option>
      </select>
      <input type="submit" class="btn btn-success">
    </form>
  </div>
</div>
{% endfor %}
</div>

<hr>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Mot</th>
      <th scope="col">Enlever le mot</th>
    </tr>
  </thead>
  <tbody>
  {% set i = 0 %}
    {% for mot in listeMot %}
    {% set i = i+1 %}
    <tr>
      <th scope="row">{{ i }}</th>
      <td>{{ mot.mot }}</td>
      {# <td>{{ mot.equipe }}</td> #}
      <td><a href="{{ path('app_enlever_mot', {'id' : mot.id}) }}"><i class="fa-solid fa-trash"></i></a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
